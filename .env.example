# ─── Serveur ───────────────────────────────────
PORT=3000
SESSION_SECRET=change_me_with_a_long_random_string

# ─── Spotify ────────────────────────────────────
# Créer une app sur https://developer.spotify.com/dashboard
# Ajouter en Redirect URI : http://localhost:3000/auth/spotify/callback
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# ─── Deezer ─────────────────────────────────────
# Créer une app sur https://developers.deezer.com/myapps
# Ajouter en Redirect URI : http://localhost:3000/auth/deezer/callback
DEEZER_APP_ID=your_deezer_app_id
DEEZER_SECRET_KEY=your_deezer_secret_key
DEEZER_REDIRECT_URI=http://localhost:3000/auth/deezer/callback

# ─── Production (Railway / Render) ──────────────
# Remplacer localhost:3000 par ton domaine déployé
# SPOTIFY_REDIRECT_URI=https://whostone.up.railway.app/auth/spotify/callback
# DEEZER_REDIRECT_URI=https://whostone.up.railway.app/auth/deezer/callback
